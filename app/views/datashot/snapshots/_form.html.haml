.bs-component
  = form_for(@snapshot, html: { class: "form-horizontal" }) do |f|
    %fieldset
      - if @snapshot.errors.any?
        #error_explanation
          %h2
            = pluralize(@snapshot.errors.count, "error")
            prohibited this snapshot from being saved:
          %ul
            - @snapshot.errors.full_messages.each do |message|
              %li= message
      .form_group
        = f.label :name, class: "col-lg-2 control-label"
        .col-lg-10
          .form-control-wrapper
            = f.text_field :name, class: "form-control", placeholder: "name"
            %span.material-input

      .form_group
        = f.label :query, class: "col-lg-2 control-label"
        .col-lg-10
          .form-control-wrapper
            = f.text_area :query, rows: 3, class: "form-control", placeholder: "query"
            %span.material-input
      .actions= f.submit(class: "btn btn-primary")
